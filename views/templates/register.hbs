<!DOCTYPE html>
<html lang="en">
    {{>head}}
    <body id="page-top">
        {{>navbar}}
        <section class="page-section" id="register">
            <div class="container">
                <div class="text-center">
                    <h2 class="section-heading text-uppercase">Register</h2>
                    <h3 class="section-subheading text-muted">Fill in required fields to register for repair</h3>
                </div>
                <form id="registerForm" method="POST" action="/admin">
                    <div class="row align-items-stretch mb-5">
                        <div class="col-md-6">
                            <div class="form-group">
                                <!-- Brand input-->
                                <input class="form-control" name="brand" type="text" placeholder="Car brand *" aria-required="true"/>
                            </div>
                            <div class="form-group">
                                <!-- Model input-->
                                <input class="form-control" name="model" type="text" placeholder="Car model *" aria-required="true"/>
                            </div>
                            <div class="form-group mb-md-0 mt-1">
                                <!-- Year of manufacture input-->
                                <input class="form-control" name="year" type="text" placeholder="Year of manufacture *" aria-required="true" />
                            </div>
                                <div class="form-group mb-md-0 mt-1">
                                <!-- Phone number input-->
                                <input class="form-control" name="phone" type="tel" placeholder="Your phone number *" aria-required="true" />
                            </div>
                                <div class="form-group mb-md-0 mt-1">
                                <!-- Date input-->
                                <input class="form-control" name="date" type="date" placeholder="Select date *" aria-required="true" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group form-group-textarea mb-md-0">
                                <!-- Message input-->
                                <textarea class="form-control" name="message" placeholder="Your problem *" aria-required="true"></textarea>
                            </div>
                        </div>
                        <div class="text-center mt-5"><button class="btn btn-primary btn-xl text-uppercase" id="submitButton" type="submit">Send Message</button></div>
                    </div>
                </form>
            </div>
        </section>
        {{>footer}}
        {{>javascript}}
    </body>
</html>


